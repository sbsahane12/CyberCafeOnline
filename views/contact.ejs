<% layout("/layouts/boilerplate") %>
<style>
    .max-w-lg {
        max-width: 32rem;
    }

    .text-lg {
        font-size: 1.125rem;
    }

    .font-semibold {
        font-weight: 600;
    }

    input[type="text"],
    input[type="file"],
    input[type="number"],
    input[type="email"],
    input[type="password"],
    input[type="url"],
    input[type="tel"],
    textarea
   {
        width: 100%;
        padding: 0.5rem;
        margin-bottom: 0.5rem;
        border: 2px solid #f37a05;
        border-radius: 0.375rem;
    }

    .width-full {
        width: 600px;
    }

    .btn:hover {
        opacity: 0.8;
        cursor: pointer;
        color: #a64500;
    }

    .bg-zinc-300 {
        background-color: #f2f5f7;
    }

    .bg-zinc-400 {
        background-color: #dce5ec;
    }

    .bg-red-500 {
        background-color: #e53e3e;
    }

    .bg-red-600 {
        background-color: #c53030;
    }

    .bg-orange-500 {
        background-color: #f37a05;
    }

    .bg-orange-600 {
        background-color: #ed6707;
    }

    .text-black {
        color: #000;
    }

    .text-white {
        color: #fff;
    }

    button:hover {
        opacity: 0.8;
    }

    .update {
        margin-left: -2px;
        margin-top: 6px;
        margin-bottom: 6px;
    }
</style>

<body>
  <form class="mb-4 mx-auto width-full needs-validation" action="/contact" method="POST" enctype="multipart/form-data" novalidate>
    <div class="max-w-lg mx-auto p-4 bg-white shadow-lg rounded-lg mt-4 mb-4">
      <div class="mb-4">
        <h2 class="text-lg font-semibold">Contact Us</h2>
      </div>
      <div class="grid grid-cols-1 gap-4">
        <input type="hidden" value="<%= user._id %>" name="user_id">
        <label for="name">Enter Your Full Name </label>
        <input type="text" name="name" placeholder="Enter First Name" class="form-control border-orange-500 rounded" required>
        <label for="email">Enter Your Mail </label>
        <input type="email" name="email" placeholder="Enter Mail" class="form-control border-orange-500 rounded" required>
        <label for="contact">Enter Your Contact Number </label>
        <input type="text" name="contact" placeholder="Enter Contact Number" class="form-control border-orange-500 rounded" required>
        <label for="image"> Please Provide Screen Shot What Problem You Are Facing</label>
        <input type="file" name="image" class="form-control border-orange-500 rounded" required>
        <label for="message">Enter Your Message </label>
        <textarea type="text" name="message" placeholder="Enter Message" class="form-control border-orange-500 rounded" required></textarea>
        
        <button class="btn">Submit </button>
      </div>
    </div>
  </form>

  <script>
   

    (function() {
      'use strict';

      var forms = document.querySelectorAll('.needs-validation');

      Array.prototype.slice.call(forms)
        .forEach(function(form) {
          form.addEventListener('submit', function(event) {
            if (!form.checkValidity()) {
              event.preventDefault();
              event.stopPropagation();
            }

            form.classList.add('was-validated');
          }, false);
        });
    })();
  </script>
</body>
