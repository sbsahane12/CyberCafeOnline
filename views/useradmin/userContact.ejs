<% layout("/layouts/adminboilerplate") %>

<style>
    .card {
        margin-top: 20px;
        margin-left: 40px;
        margin-right: 40px;
        margin-bottom: 20px;
        padding: 20px;
        border: 1px solid #ccc;
        border-radius: 5px;
        box-shadow: 0 0 5px #ccc;
        width: 1400px;
    }

  
    #searchInput {
    padding: 10px;
    width: 100%;
    height: 45px;
    margin-top: 12px;
    margin-bottom: 12px;
    border-radius: 4px;

    border: 1px solid #c05621 ;
    color: dark #c05621;
  }
</style>

<body>
    <div class="card">
        <div class="card-body">
            <div class="table-responsive">
                <input id="searchInput" class="form-control mr-sm-2" type="search" placeholder="Search Issues" aria-label="Search">
                <table id="serviceTable" class="table table-striped table-hover">
                    <thead>
                        <tr>
                            <th>No</th>
                            <th>Username</th>
                            <th>Contact Name</th>
                            <th>Contact Number</th>
                            <th>Problem</th>
                            <th>User Email</th>
                            <th>Action</th>
                        </tr>
                    </thead>
                    <tbody>
                        <% for(let i = 0; i < contacts.length; i++) {%>
                            <tr>
                                <td> <%=i+1%> </td>
                                <td><%= contacts[i].user_id.username %></td>
                                <td><%= contacts[i].name %></td>
                                <td><%= contacts[i].contact %></td>
                                <td><%= contacts[i].message %></td>
                                <td><%= contacts[i].user_id ? contacts[i].user_id.email : 'N/A' %></td>
                                <td>
                                   
                                       
                                            <a href="/admin/contact/<%= contacts[i].user_id._id %>/seen" class="btn btn-sm btn-success">Seen</a>
                                       
                                            <a href="/admin/contact/<%= contacts[i]._id %>" class="btn btn-sm btn-secondary">View</a>
                                            <a href="/admin/contact/<%= contacts[i].user_id._id %>/delete" class="btn btn-sm btn-danger">Delete</a>
                                       
                                   

                                </td>

                            </tr>
                        <% } %>
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</body>
