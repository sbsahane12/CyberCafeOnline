        color: #f37a05;
        border: 1px solid #f37a05;
    }

    .btn-secondary:hover {
        background-color: #f37a05;
        color: white;
    }

    /* Highlighted Keywords */
    .highlight {
        color: #f37a05;
        font-weight: bold;
    }

    /* Responsive Design */
    @media (max-width: 768px) {
        .hero-section h1 {
            font-size: 2em;
        }

        .hero-section ul {
            font-size: 1em;
        }

        .service {
            margin-bottom: 20px;
        }
    }

    @media (max-width: 576px) {
        .hero-section h1 {
            font-size: 1.5em;
        }
    }
</style>

