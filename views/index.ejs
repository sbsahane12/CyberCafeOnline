    <script>
        // JavaScript to highlight important keywords
        document.addEventListener("DOMContentLoaded", function() {
            const keywords = ["document needs", "20+ online document services", "India's first online document service platform", "comprehensive document services", "fast, reliable, and secure document services"];
            const textElements = document.querySelectorAll("p, li");

            textElements.forEach(element => {
                keywords.forEach(keyword => {
                    if (element.textContent.includes(keyword)) {
                        element.innerHTML = element.innerHTML.replace(new RegExp(keyword, 'g'), `<span class="highlight">${keyword}</span>`);
                    }
                });
            });
        });
    </script>
